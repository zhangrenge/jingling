.monthBox{
    width: 96%;
    padding: 0 2%;
    background-color:#ffffff;
}

.weekDay{
    display: flex;
    flex-grow: 1;  
    background-color:rgb(250,250,250); 
    width:100%;
    height:40px; 
    line-height:10px  
  }

.weekDay .week{
    display: flex;
    width: 200rpx;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
    justify-content: center;
    font-family:'微软雅黑';
    font-weight: 200;   
    font-size: 30rpx;
}
.monthDay{
    width: 100%;
}
.monthDay .tr{
    width: 100%;
    display: flex;
    flex-grow: 1;
}
.monthDay .tr .day{
    display: block;
    width: 200rpx;
    height: 80rpx;
    padding-top: 10rpx;
    border-radius: 5px;
    margin-top: 5px;
    margin-bottom: 5rpx;
    text-align: center;
    color: #999;
    border: 1rpx solid white;
}
.monthDay .tr .day.hideDayInfo{
    border: 1rpx solid white;
}
.monthDay .tr .day.showDayInfo{
    border:1rpx solid #8D91FF;
}
.monthDay .tr .today{
    background-color: #ff5a5a;
    color:white;
    border-radius:40px;
    width:90px;
    height:40px
}
.monthDay .tr .day .gongli{
    display: block;
    font-family:Arial, Helvetica, sans-serif;
}
.monthDay .tr .day .nongli{
    display: block;
    font-family: "微软雅黑";
    font-weight: 200;
    font-size: 20rpx;
    text-align: center;
}
