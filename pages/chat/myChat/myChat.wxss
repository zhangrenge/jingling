.homepage {
  height: 100%;
  width: 100%;
  position: absolute;
}

.topBar {
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  height: 40px;
  line-height: 30px;
}

.weui-label {
  width: 50px;
}

.spread-image {
  width: 12px;
  height: 12px;
  margin-left: 5px;
}

.content {
  height: 553px;
  background-color: #fff;
}

.date {
  position: relative;
  width: 100%;
  text-align: center;
  height: 45px;
  background-color: #fff;
  line-height: 30px;
}

.date .whichYear {
  display: inline-block;
  vertical-align: top;
  padding-top: 15rpx;
  font-size: 16px;
  color: #ff5a5a;
  font-family: '微软雅黑';
}

.date .addSchedule {
  display: inline-block;
  vertical-align: top;
  font-size: 16px;
  color: #ff5a5a;
  font-family: '微软雅黑';
  padding-top: 15rpx;
  float: left;
}

.date .lookList {
  display: inline-block;
  vertical-align: top;
  padding-top: 15rpx;
  font-size: 16px;
  color: #ff5a5a;
  font-family: '微软雅黑';
  float: right;
}

.scheduleContent {
  max-height: 300px;
  overflow: auto;
}

.weui-form-preview__btn_primary {
  color: #ff5a5a;
}

.page__bd {
  background-color: #f7f7f7;
  width: 100%;
}

.weui-form-preview {
  margin-bottom: 25px;
  font-size: 14px
}

.weui-form-preview__value {
  text-align: left;
}

.date-image {
  width: 12px;
  height: 12px;
  margin-left: 20px;
  margin-right: 20px;
}

.monthBox {
  width: 96%;
  padding: 0 2%;
  background-color: #fff;
}

.weekDay {
  display: flex;
  flex-grow: 1;
  background-color: rgb(250, 250, 250);
  width: 100%;
  height: 40px;
  line-height: 10px;
}

.weekDay .week {
  display: flex;
  width: 200rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  justify-content: center;
  font-family: '微软雅黑';
  font-weight: 200;
  font-size: 30rpx;
}

.monthDay {
  width: 100%;
}

.monthDay .tr {
  width: 100%;
  display: flex;
  flex-grow: 1;
}

.monthDay .tr .day {
  display: block;
  width: 200rpx;
  height: 80rpx;
  padding-top: 10rpx;
  border-radius: 5px;
  margin-top: 5px;
  margin-bottom: 5rpx;
  text-align: center;
  color: #999;
  border: 1rpx solid white;
}

.monthDay .tr .day.hideDayInfo {
  border: 1rpx solid white;
}

.monthDay .tr .day.showDayInfo {
  border: 1rpx solid #8d91ff;
}

.monthDay .tr .today {
  background-color: #ff5a5a;
  color: white;
  border-radius: 40px;
  width: 90px;
  height: 40px;
}

.monthDay .tr .schedule {
  background-color: #e4e4e4;
  color: white;
  border-radius: 40px;
  width: 90px;
  height: 40px;
}

.monthDay .tr .day .gongli {
  display: block;
  font-family: Arial, Helvetica, sans-serif;
}

.monthDay .tr .day .nongli {
  display: block;
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 20rpx;
  text-align: center;
}

.title {
  color: #0a0;
  width: 100%;
  height: 100%;
  margin-left: 30%;
  margin-right: 30%;
}

.area {
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-top: 1px;
}

.left_area {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 10px;
  margin-bottom: 10px;
  width: 25%;
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 12px;
  margin-left: 34px;
}

.wenzi {
  margin-top: 13px;
}

.right_area {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 20rpx;
  width: 25%;
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 12px;
  margin-left: 39px;
}

.sign-normal {
  color: rgb(0, 194, 0);
}

.sign-late {
  color: #ff5a5a;
}

.most-read-area {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
  background-color: #fff;
  margin-top: 100rpx;
}

.bar_logo {
  width: 5%;
  height: 1rem;
  background-size: 80%;
  position: absolute;
  left: 5%;
  right: 5%;
  top: 0.3rem;
}

.view-type-spread {
  flex-direction: row;
  justify-content: center;
  display: flex;
  align-items: center;
  margin-top: 12px;
}

.text-ellipsis {
  min-height: 0px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 0;
  -webkit-box-orient: vertical;
}

.view-hide {
  display: none;
}

.view-show {
  display: block;
}

.bottom {
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding-left: 5%;
  padding-right: 5%;
  margin-top: 20px;
}

.left_bottom {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 10%;
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 25rpx;
  margin-top: 20px;
}

.circle-image {
  width: 35px;
  height: 35px;
  margin-left: 5px;
  margin-right: 5px;
}

.line {
  width: 2px;
  height: 50px;
  margin-left: 20px;
}

.right_bottom {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 80%;
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 25rpx;
}

.time1 {
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 15px;
  color: rgb(0, 194, 0);
  margin-top: 20px;
}

.adress {
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 12px;
  color: rgb(153, 153, 153);
  margin-top: 6px;
}

.time2 {
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 15px;
  color: rgb(0, 194, 0);
  margin-top: 40px;
}

.time-image {
  width: 12px;
  height: 12px;
  margin-right: 20px;
}

.address-image {
  width: 9px;
  height: 12px;
  margin-right: 20px;
}
.weui-form-preview__btn_primary{color:#0bb20c}
.weui-form-preview__ft {
  display: flex;
  flex-direction: row;
  padding: 5px 0;
}
.weui-form-preview__ft view{
  background: rgb(64, 169, 243);
  border-radius:5px;
  color: #fff;
  height:34px;
  line-height:34px;
  padding-left: 8px;
  padding-right: 8px;
}
navigator {
height:34px;
width:50px;
display:block;
background: rgb(64, 169, 243);
border-radius:5px;
color:#fff;
text-align:center;
line-height:34px;
margin:0 10px;

}
navigator:hover{
  background: rgb(64, 169, 243);
}
.bottom-btn button {
  background-color: #5ab9ff;
  border-radius: 50px;
}

.radio-group {
  display: flex;
  text-align: center;
}

.radio-group .radio {
  flex: 1;
  font-size: 14px;
  color: #000;
}

.PrevImgBox {
  display: flex;
  margin-top: 5vh;
  align-content: center;
  text-align: center;
}

.PrevImgBox .PrevCell {
  flex: 1;
}

.PrevImgBox .PrevCell>label>image {
  border: 2px solid rgba(0, 0, 0, 0);
}

.PrevImgBox .PrevCell>label>image.selected {
  border: 2px solid rgba(150, 150, 250, 0.5);
}
.PrevImgBox image{
  width:190rpx;
  height:218rpx
}
