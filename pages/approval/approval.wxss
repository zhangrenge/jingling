page {
  height: 100%;
  background-color: #efefef;
}

.container-mine {
  flex-direction: column;
  display: flex;
}

.tab-line {
  width: 100%;
  margin-top: 80rpx;
  flex-direction: row;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;  
}

.tab-line-item {
  width: 80rpx;
  height: 1rpx;
}

.tab-item {
  height: 100%;
  flex-direction: row;
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
}

.tab-top {
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  position: fixed;
}

.bg-white {
  background-color: #fff;
}

.bg-blue {
  background-color: #5ab9ff;
}

.text-s-big {
  font-size: 30rpx;
}

.text-s-mid {
  font-size: 24rpx;
}

.text-c-black {
  color: #333;
}

.text-c-gray {
  color: #999;
}

.text-c-blue {
  color: #24ccaa;
}

.margin-t-twenty {
  margin-top: 20rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.flex {
  display: flex;
}

.tip-item {
  height: 160rpx;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
}

.column-item {
  height: 190rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  padding-right: 40rpx;
}

.row {
  flex-direction: row;
  display: flex;
  align-items: center;
}

.column {
  flex-direction: column;
  display: flex;
}

.img-head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.selected {
  color: #5ab9ff;
}

.unselected {
  color: #999;
}

.line {
  width: 2rpx;
  height: 40rpx;
  background-color: #efefef;
}

.img-sorry {
  width: 262rpx;
  height: 212rpx;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  margin: auto;
}

.bottom-loading {
  height: 80rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 30rpx;
  background-color: #ffffff; 
}