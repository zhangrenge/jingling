.topBar {
  position: relative;
  width: 100%;
  font-family: '微软雅黑';
  font-weight: bold;
  text-align: center;
  font-variant: bold;
}

.topBar .whichYear {
  display: inline-block;
  vertical-align: top;
  padding-top: 15rpx;
  font-size: 28rpx;
}

.toast-child {
	display: flex;
	flex-direction: column;
	position: fixed;
    z-index: 5000;
    min-height: 2.2em;
    max-width: 70%;
    top: 220px;
    left: 50%;
    padding: 8px;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 10px;
    color: #FFFFFF;
    font-size: 30rpx;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: space-around;
}

.show {
  display: block;
}

.hidden {
  display: none;
}


